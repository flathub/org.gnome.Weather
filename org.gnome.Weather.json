{
    "id": "org.gnome.Weather",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node24",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command": "gnome-weather",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--metadata=X-DConf=migrate-path=/org/gnome/Weather/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/node24/bin:/usr/lib/sdk/typescript/bin"
    },
    "modules": [
        {
            "name": "geocode-glib",
            "buildsystem": "meson",
            "config-opts": [
                "-Denable-installed-tests=false",
                "-Denable-gtk-doc=false",
                "-Dsoup2=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/geocode-glib/3.26/geocode-glib-3.26.4.tar.xz",
                    "sha256": "2d9a6826d158470449a173871221596da0f83ebdcff98b90c7049089056a37aa",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "geocode-glib"
                    }
                }
            ]
        },
        {
            "name": "libgweather",
            "buildsystem": "meson",
            "config-opts": [
                "-Denable_vala=false",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dsoup2=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgweather/4.4/libgweather-4.4.4.tar.xz",
                    "sha256": "7017677753cdf7d1fdc355e4bfcdb1eba8369793a8df24d241427a939cbf4283",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libgweather",
                        "versions": {
                            "<": "40.0",
                            ">=": "4.0.0"
                        }
                    }
                }
            ]
        },
        {
            "name": "gnome-desktop",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddebug_tools=false",
                "-Dudev=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/44/gnome-desktop-44.4.tar.xz",
                    "sha256": "1d8cb9c6a328eb689b0c1269cf53834cc84d851d7e71970cdabba82706b44984",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-desktop"
                    }
                }
            ]
        },
        {
            "name": "gnome-weather",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-weather/49/gnome-weather-49.0.tar.xz",
                    "sha256": "ee1f76b85eba9db0c8d5c02041a9d85ecdd22abb5ec6bb3ff32225929c0fce5f",
                    "x-checker-data": {
                        "type": "gnome",
                        "is-important": true,
                        "name": "gnome-weather"
                    }
                }
            ]
        }
    ]
}
